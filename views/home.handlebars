<!-- MAIN CONTAINER -->
<div class="w3-main w3-row">

    {{#each clooks}}

    <!-- CLOOK -->
    <a href="/clooks/{{_id}}" class="w3-col s6">
        <div class="w3-container w3-center clook-container">
            <div class="clook">
                <div class="timer"></div>
                <div class="middle"></div>
            </div>
            <h1 class="w3-large">{{title}}</h1>
        </div>
    </a>

    {{else}}

    <!-- EMPTY LIST -->
    <div class="w3-container w3-center">
        <i class="material-icons big-icon">folder_open</i>
        <h1 class="w3-large">You don't have any clook</h1>
    </div>

    {{/each}}

    <!-- NEW CLOOK BUTTON -->
    <button id="new" class="w3-btn w3-card w3-xlarge w3-circle fab">
        <i class="material-icons">add</i>
    </button>

</div>

<!-- CLOOK INFO -->
<script>
    var clooks_list = [
        {{#each clooks}}
        {
            id: '{{_id}}',
            duration: {{duration}},
            {{#if color}}
            color: '{{color}}',
            {{/if}}
            {{#if started}}
            started: '{{started}}'
            {{/if}}
        },
        {{/each}}
    ];
</script>
