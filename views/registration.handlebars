<!-- HEADER -->
<header class="w3-container w3-center">
    <h1 class="w3-xxlarge">Registration</h1>
</header>

<!-- MAIN CONTAINER -->
<div class="main">

    <div class="w3-container">
        <p id="message" class=""><br></p>
        <input type="text" id="username" class="w3-input registration_field" placeholder="Username"><br>
        <input type="password" id="password" class="w3-input registration_field" placeholder="Password"><br>
        <input type="password" id="password2" class="w3-input registration_field" placeholder="Repeat password"><br>
        <button id="register" class="w3-btn w3-round w3-right">Register</button><br>
    </div>

    <div class="w3-container w3-margin-top w3-center">
        <a href="/login">Login into your account</a>
    </div>

</div>

<!-- SCRIPTS -->
<script src="/scripts/ajax.js"></script>
