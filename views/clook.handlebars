<h1>{{title}}</h1>

<div id="clook">
    <div id="timer"></div>
    <div id="center"></div>
</div>

<button id="delete">Delete</button>

<p id="message"><br></p>
<a href="/clooks">Go back to the clooks</a>

<script>
