<link rel="stylesheet" href="/styles/clook.css">

<header class="w3-container w3-center">
    <h1 class="w3-xxlarge">{{title}}</h1>
</header>

<div class="main">

    <div class="w3-container clook-container">
        <div class="clook">
            <div class="timer"></div>
            <div class="middle"></div>
        </div>
    </div>

    <div class="w3-container">
        <button id="delete" class="w3-btn w3-round">Delete</button>
        <p id="message"><br></p>
        <a href="/clooks">Go back to the clooks</a>
    </div>

</div>

<script>
    var clookInfo = {
        id: '{{_id}}',
        duration: {{duration}},
        {{#if color}}
            color: '{{color}}',
        {{/if}}
        {{#if started}}
            started: '{{started}}'
        {{/if}}
    };
</script>

<script src="/scripts/ajax.js"></script>
<script src="/scripts/message.js"></script>
<script src="/scripts/clook.js"></script>
