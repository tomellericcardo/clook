<!DOCTYPE html>
<html lang="en">
    <head>

        <title>{{title}}</title>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

        <!-- FONTS & ICONS -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

        <!-- STYLES -->
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="/styles/main.css">
        {{#if sidebar}}
        <link rel="stylesheet" href="/styles/sidebar.css">
        {{/if}}
        {{#each styles}}
        <link rel="stylesheet" href="/styles/{{this}}.css">
        {{/each}}

    </head>
    <body>

        <!-- HEADER -->
        <header class="w3-container w3-center">
            {{#if sidebar}}
            <button id="open-sidebar" class="w3-button menu">
                <i class="material-icons">menu</i>
            </button>
            {{/if}}
            {{#if back}}
            <button class="w3-button menu" onclick="window.location.href = '/clooks'">
                <i class="material-icons">arrow_back</i>
            </button>
            {{/if}}
            <h1 class="w3-xxlarge">{{title}}</h1>
        </header>

        {{#if sidebar}}
        <!-- SIDEBAR -->
        <div id="close-sidebar"></div>
        <div id="sidebar" class="w3-sidebar w3-bar-block w3-animate-left">
            <a href="/clooks" class="w3-bar-item"><i class="material-icons">timer</i> My clooks</a>
            <a href="/clooks/new" class="w3-bar-item"><i class="material-icons">add</i> New clook</a>
            <a href="/users/settings" class="w3-bar-item"><i class="material-icons">settings</i> Settings</a>
            <a href="/users/logout" class="w3-bar-item"><i class="material-icons">exit_to_app</i> Logout</a>
            <a href="/about" class="w3-bar-item w3-bottom"><i class="material-icons">info</i> About</a>
        </div>
        {{/if}}

        <div class="w3-third responsive"></div>
        <div class="w3-third">
            {{{body}}}
        </div>

        <!-- SCRIPTS -->
        {{#if sidebar}}
        <script src="/scripts/sidebar.js"></script>
        {{/if}}
        {{#each scripts}}
        <script src="/scripts/{{this}}.js"></script>
        {{/each}}

    </body>
</html>
